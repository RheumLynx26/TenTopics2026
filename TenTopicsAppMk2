        const App = () => {
            const [searchTerm, setSearchTerm] = useState("");
            const [activeDay, setActiveDay] = useState("Todos");
            const [activeView, setActiveView] = useState("Programa");

            const driveFolderUrl = "https://drive.google.com/drive/folders/1UKHxUVXkyxdMHkQrWSV5htt2jlqzu4aF?usp=sharing";

            // Función inteligente para ordenar por apellido (ignora títulos y maneja nombres compuestos)
            const getSortableName = (fullName) => {
                let name = fullName.replace(/^(Dr\.|Dra\.|Prof\.)\s+/i, '').trim();
                name = name.replace(/^(Mª|M\.|A\.)\s+/i, '');
                const compoundNames = ["José Andrés", "José Miguel", "Francisco Javier", "Ana Mª", "Mª Ángeles", "Tarek Carlos", "Antonio Javier", "Clara Itziar", "Carmen Pilar", "Munther A.", "Graham R.V."];
                for (const compound of compoundNames) {
                    if (name.startsWith(compound)) return name.slice(compound.length).trim().toLowerCase();
                }
                const parts = name.split(/\s+/);
                return (parts.length > 1 ? parts.slice(1).join(' ') : name).toLowerCase();
            };

            const peopleList = useMemo(() => {
                const list = {};
                programData.forEach(item => {
                    item.speakers.forEach(s => {
                        if (!list[s]) list[s] = { affiliation: affiliations[s] || "Afiliación no disponible", roles: [] };
                        list[s].roles.push({ type: "Ponente", title: item.title, block: item.block, time: item.time, day: item.day });
                    });
                    item.moderators.forEach(m => {
                        if (!list[m]) list[m] = { affiliation: affiliations[m] || "Afiliación no disponible", roles: [] };
                        list[m].roles.push({ type: "Moderador", title: item.title, block: item.block, time: item.time, day: item.day });
                    });
                });
                return Object.entries(list)
                    .map(([name, data]) => ({ name, ...data }))
                    .sort((a, b) => getSortableName(a.name).localeCompare(getSortableName(b.name)));
            }, []);

            const filteredProgram = useMemo(() => {
                return programData.filter(item => {
                    const s = searchTerm.toLowerCase();
                    const matchesSearch = item.title.toLowerCase().includes(s) || item.speakers.some(sp => sp.toLowerCase().includes(s)) || item.block.toLowerCase().includes(s) || item.moderators.some(m => m.toLowerCase().includes(s));
                    const matchesDay = activeDay === "Todos" || item.day.includes(activeDay);
                    return matchesSearch && matchesDay;
                });
            }, [searchTerm, activeDay]);

            const filteredPeople = useMemo(() => {
                return peopleList.filter(p => p.name.toLowerCase().includes(searchTerm.toLowerCase()) || p.affiliation.toLowerCase().includes(searchTerm.toLowerCase()));
            }, [searchTerm, peopleList]);

            return (
                <div className="min-h-screen bg-slate-50 text-slate-900 pb-12">
                    <header className="bg-[#8e7a1d] text-white shadow-xl overflow-hidden relative">
                        <div className="absolute top-0 right-0 w-[500px] h-[500px] bg-white/5 rounded-full -mr-40 -mt-40 blur-3xl"></div>
                        <div className="max-w-5xl mx-auto px-6 py-14 relative z-10">
                            <div className="flex flex-col lg:flex-row items-center justify-between gap-8">
                                <div className="text-center lg:text-left space-y-4">
                                    <div className="inline-flex items-center gap-2 bg-black/10 backdrop-blur px-4 py-1.5 rounded-full text-[10px] tracking-[0.3em] font-black uppercase border border-white/10">Josep Font Franco • Memorial 20 Aniv.</div>
                                    <h1 className="text-4xl lg:text-6xl font-extrabold leading-[1.1] tracking-tight">JOSEP FONT IN AUTOIMMUNE DISEASES <br className="hidden lg:block"/> & RHEUMATOLOGY</h1>
                                    <div className="flex flex-wrap items-center justify-center lg:justify-start gap-8 pt-4">
                                        <div className="flex items-center gap-3 text-white/90">
                                            <Icon name="calendar" className="opacity-60" />
                                            <p className="font-bold text-lg italic">6 y 7 de Febrero, 2026</p>
                                        </div>
                                        <div className="flex items-center gap-3 text-white/90">
                                            <Icon name="map-pin" className="opacity-60" />
                                            <p className="font-bold text-lg italic">Hotel Barceló Sants, Barcelona</p>
                                        </div>
                                    </div>
                                </div>
                                <div className="w-44 h-44 bg-[#a18c26] rounded-full border-8 border-white/10 flex flex-col items-center justify-center text-center p-6 shadow-2xl">
                                   <span className="text-[11px] font-black tracking-widest opacity-80 uppercase leading-none">Established 1998</span>
                                   <div className="h-0.5 w-10 bg-white/30 my-2"></div>
                                   <span className="text-xl font-black leading-none uppercase">28<br/>TEN<br/>TOPICS</span>
                                   <div className="h-0.5 w-10 bg-white/30 my-2"></div>
                                   <span className="text-[10px] font-bold opacity-80 uppercase leading-none">Josep Font</span>
                                </div>
                            </div>
                        </div>
                    </header>

                    <main className="max-w-5xl mx-auto px-4 -mt-12 relative z-20">
                        <div className="mb-6 flex justify-center lg:justify-start">
                            <a href={driveFolderUrl} target="_blank" rel="noopener noreferrer" className="group flex items-center gap-4 bg-white border-2 border-[#8e7a1d] px-8 py-4 rounded-2xl shadow-xl hover:bg-[#8e7a1d] hover:text-white transition-all transform hover:-translate-y-1 active:scale-95">
                                <div className="w-12 h-12 rounded-xl bg-[#8e7a1d]/10 flex items-center justify-center text-[#8e7a1d] group-hover:bg-white/20 group-hover:text-white">
                                    <Icon name="file-text" size={28} />
                                </div>
                                <div className="text-left">
                                    <p className="text-[10px] font-black uppercase tracking-widest opacity-60">Recursos del Congreso</p>
                                    <p className="text-lg font-black tracking-tight flex items-center gap-2">Infografías de las ponencias <Icon name="external-link" size={16} /></p>
                                </div>
                            </a>
                        </div>

                        <div className="bg-white rounded-3xl shadow-2xl p-6 lg:p-10 mb-10 border border-slate-200">
                            <div className="flex flex-col gap-8">
                                <div className="flex bg-slate-100 p-1.5 rounded-2xl border border-slate-200 self-center">
                                    <button onClick={() => setActiveView("Programa")} className={`px-8 py-3 rounded-xl text-xs font-black uppercase tracking-[0.2em] transition-all flex items-center gap-3 ${activeView === "Programa" ? "bg-white text-[#8e7a1d] shadow-lg" : "text-slate-500"}`}><Icon name="book-open" size={16} /> Programa Científico</button>
                                    <button onClick={() => setActiveView("Expertos")} className={`px-8 py-3 rounded-xl text-xs font-black uppercase tracking-[0.2em] transition-all flex items-center gap-3 ${activeView === "Expertos" ? "bg-white text-[#8e7a1d] shadow-lg" : "text-slate-500"}`}><Icon name="users" size={16} /> Ponentes y Moderadores</button>
                                </div>
                                <div className="grid lg:grid-cols-3 gap-8 items-end">
                                    <div className={`${activeView === "Programa" ? "lg:col-span-2" : "lg:col-span-3"} space-y-3`}>
                                        <label className="text-[11px] font-black text-slate-400 uppercase tracking-[0.2em]">Buscador Inteligente</label>
                                        <div className="relative group">
                                            <Icon name="search" className="absolute left-5 top-1/2 -translate-y-1/2 text-slate-300" size={24} />
                                            <input type="text" placeholder="Ponente, bloque, hospital..." className="w-full pl-16 pr-8 py-5 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-4 focus:ring-[#8e7a1d]/5 outline-none transition-all text-xl font-semibold" value={searchTerm} onChange={(e) => setSearchTerm(e.target.value)} />
                                        </div>
                                    </div>
                                    {activeView === "Programa" && (
                                        <div className="space-y-3">
                                            <label className="text-[11px] font-black text-slate-400 uppercase tracking-[0.2em]">Jornada</label>
                                            <div className="flex bg-slate-100 p-1.5 rounded-2xl border border-slate-200 gap-1">
                                                {["Todos", "Viernes", "Sábado"].map(day => (<button key={day} onClick={() => setActiveDay(day)} className={`flex-1 py-3.5 rounded-xl text-[10px] font-black uppercase ${activeDay === day ? "bg-white text-[#8e7a1d] shadow-sm" : "text-slate-500"}`}>{day}</button>))}
                                            </div>
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>

                        {activeView === "Programa" ? (
                            <div className="space-y-8">
                                {filteredProgram.map((item, index) => {
                                    const showDaySeparator = activeDay === "Todos" && index > 0 && item.day !== filteredProgram[index - 1].day;
                                    const sortedMods = [...item.moderators].sort((a, b) => getSortableName(a).localeCompare(getSortableName(b)));
                                    const sortedSps = [...item.speakers].sort((a, b) => getSortableName(a).localeCompare(getSortableName(b)));
                                    return (
                                        <div key={index}>
                                            {showDaySeparator && (<div className="py-12 flex items-center gap-6"><div className="h-px bg-stone-300 flex-grow"></div><div className="flex items-center gap-3 text-stone-400 font-black uppercase tracking-[0.4em] text-xs"><Icon name="calendar" size={14} /> {item.day}</div><div className="h-px bg-stone-300 flex-grow"></div></div>)}
                                            <div className={`bg-white rounded-[2rem] border overflow-hidden shadow-sm hover:shadow-2xl transition-all group ${item.isSpecialBlock ? 'border-[#8e7a1d]/30' : 'border-slate-200'}`}>
                                                <div className={`${item.isSpecialBlock ? 'bg-[#8e7a1d]/5' : 'bg-slate-50/50'} border-b border-slate-100 px-8 py-4 flex flex-wrap items-center justify-between gap-4`}>
                                                    <div className="flex items-center gap-4">
                                                        <div className={`p-2 rounded-lg ${item.category === "Pausa" ? 'bg-amber-100 text-amber-600' : item.isSpecialBlock ? 'bg-[#8e7a1d] text-white' : 'bg-slate-200'}`}>
                                                            <Icon name={item.category === "Pausa" ? "coffee" : "book-open"} size={18} />
                                                        </div>
                                                        <span className={`text-[13px] font-black uppercase tracking-widest ${item.isSpecialBlock ? 'text-[#8e7a1d]' : 'text-slate-500'}`}>{item.block}</span>
                                                    </div>
                                                    {sortedMods.length > 0 && (<div className="flex items-center gap-3 bg-white px-4 py-2 rounded-xl border border-slate-100 shadow-sm"><Icon name="users" size={16} className="text-slate-400" /><span className="text-[10px] font-black text-slate-400 uppercase tracking-tight">Moderadores:</span><div className="flex flex-wrap gap-2">{sortedMods.map(m => (<div key={m} className="text-[11px] font-bold text-slate-700 bg-slate-50 px-2 py-0.5 rounded border border-slate-200/50">{m}</div>))}</div></div>)}
                                                </div>
                                                <div className="p-8">
                                                    <div className="flex flex-col lg:flex-row gap-10">
                                                        <div className="lg:w-36 shrink-0">
                                                            <div className={`inline-flex items-center gap-3 px-5 py-2.5 rounded-2xl font-black text-2xl shadow-inner ${item.category === "Pausa" ? 'bg-amber-500 text-white' : item.isSpecialBlock ? 'bg-[#8e7a1d] text-white' : 'bg-slate-900 text-white'}`}><Icon name="clock" size={22} /> {item.time.split(' ')[0]}</div>
                                                            <div className="mt-3 text-[11px] font-black text-slate-400 uppercase tracking-widest pl-1">{item.day.split(',')[0]}</div>
                                                        </div>
                                                        <div className="flex-grow space-y-6">
                                                            <h3 className={`text-2xl md:text-3xl font-bold leading-tight group-hover:text-[#8e7a1d] transition-colors ${item.category === "Discusión" ? 'text-slate-400 italic' : ''}`}>{item.title}</h3>
                                                            {sortedSps.length > 0 && (<div className="grid gap-3">{sortedSps.map(s => (<div key={s} className="flex items-start gap-4 bg-slate-50 px-5 py-4 rounded-2xl border border-slate-100 hover:bg-white hover:border-[#8e7a1d]/20 transition-all"><div className="w-10 h-10 rounded-full shrink-0 flex items-center justify-center bg-slate-800 text-white"><Icon name="user" size={18} /></div><div><p className="font-extrabold text-slate-800 tracking-tight leading-none mb-1">{s}</p><p className="text-xs text-slate-500 leading-snug">{affiliations[s] || "Afiliación no detallada"}</p></div></div>))}</div>)}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    );
                                })}
                            </div>
                        ) : (
                            <div className="grid md:grid-cols-2 gap-6">
                                {filteredPeople.map(p => (
                                    <div key={p.name} className="bg-white rounded-3xl border border-slate-200 p-8 shadow-sm hover:shadow-xl transition-all flex flex-col h-full">
                                        <div className="flex items-start gap-5 mb-6">
                                            <div className="w-16 h-16 rounded-2xl bg-[#8e7a1d]/10 flex items-center justify-center text-[#8e7a1d] shrink-0"><Icon name="user" size={32} /></div>
                                            <div><h3 className="text-xl font-black text-slate-900 leading-tight mb-1">{p.name}</h3><div className="flex items-center gap-2 text-slate-500"><Icon name="building" size={14} /><p className="text-xs font-semibold leading-snug">{p.affiliation}</p></div></div>
                                        </div>
                                        <div className="flex-grow space-y-3">
                                            <div className="h-px bg-slate-100 w-full mb-4"></div>
                                            <p className="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Intervenciones:</p>
                                            {p.roles.map((r, i) => (<div key={i} className="bg-slate-50 rounded-xl p-3 border border-slate-100"><div className="flex justify-between items-center"><span className={`text-[9px] font-black uppercase px-2 py-0.5 rounded-full ${r.type === "Ponente" ? "bg-[#8e7a1d] text-white" : "bg-slate-800 text-white"}`}>{r.type}</span><span className="text-[9px] font-bold text-slate-400">{r.time} • {r.day.split(',')[0]}</span></div><p className="text-xs font-black mt-1 leading-snug">{r.title}</p><div className="flex items-center gap-1 mt-1 opacity-60"><Icon name="book-open" size={10} /><span className="text-[10px] font-bold text-slate-500 truncate">{r.block}</span></div></div>))}
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}

                        <footer className="mt-24 border-t-2 border-slate-200 pt-20">
                            <div className="relative overflow-hidden bg-slate-900 rounded-[3rem] p-10 md:p-16 text-white shadow-2xl">
                                <div className="absolute right-0 bottom-0 p-10 opacity-10 rotate-12 pointer-events-none"><Icon name="sparkles" size={350} /></div>
                                <div className="relative z-10 max-w-3xl">
                                    <div className="inline-flex items-center gap-4 bg-[#8e7a1d] px-5 py-2 rounded-xl mb-8 font-black uppercase tracking-[0.3em] text-[11px]">Innovación & Futuro</div>
                                    <h4 className="text-3xl md:text-5xl font-extrabold mb-10 leading-tight">Si esta aplicación te ha gustado, no te debes perder el <br className="hidden lg:block"/><span className="text-[#a18c26] underline decoration-white/10 decoration-8 underline-offset-8">"Taller de IA en EAS"</span></h4>
                                    <div className="flex flex-wrap gap-6 mb-12">
                                        <div className="bg-white/5 px-8 py-5 rounded-[1.5rem] border border-white/10 flex items-center gap-4"><Icon name="calendar" className="text-[#8e7a1d]" size={24} /><span className="text-xl font-black italic">Sábado 7/2/26</span></div>
                                        <div className="bg-white/5 px-8 py-5 rounded-[1.5rem] border border-white/10 flex items-center gap-4"><Icon name="clock" className="text-[#8e7a1d]" size={24} /><span className="text-xl font-black italic">16:30 h</span></div>
                                    </div>
                                    <div className="pt-10 border-t border-white/10">
                                        <p className="text-[10px] uppercase tracking-[0.4em] font-black text-white/40 mb-6">Aplicación creada por cortesía de:</p>
                                        <div className="grid grid-cols-2 md:flex md:flex-wrap gap-x-12 gap-y-4">{["José Miguel Sequí", "Miguel Martín", "Toni Sisó", "Manel Ramos"].map(n => (<div key={n} className="flex items-center gap-3"><div className="w-1.5 h-1.5 rounded-full bg-[#8e7a1d]"></div><span className="text-sm font-black tracking-tight">{n}</span></div>))}</div>
                                    </div>
                                </div>
                            </div>
                        </footer>
                    </main>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
